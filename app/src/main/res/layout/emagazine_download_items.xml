<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_height="132dp"
    >

    <ImageView
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        android:id="@+id/e_magazine_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        >

        <TextView
            android:id="@+id/e_mag_company_name"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Company"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginLeft="8dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/mag_title"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today,I am Grateful"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:textColor="#000"
            android:letterSpacing="0.02"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center"
            android:paddingBottom="2dp"
            android:layout_marginLeft="8dp"

            >
            <TextView
                android:id="@+id/magazine_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150Rs"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#000"
                android:letterSpacing="0.05"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="#000"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:id="@+id/magazine_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e-magazine available"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="10sp"
                android:letterSpacing="0.05"
               />
        </LinearLayout>

        <TextView
            android:id="@+id/magazine_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textSize="10sp"
            android:text="Lorem ipsum dolor sit amet,consectetur adipiscing slit,sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea"
            android:layout_marginLeft="8dp"
            android:textColor="#000"
            />






    </LinearLayout>










</LinearLayout>