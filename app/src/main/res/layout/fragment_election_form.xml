<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ElectionFormActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:alpha="1"
            android:clickable="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_back"
            android:focusable="true"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/gradientTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Election Form"
            android:textSize="18sp"
            android:lineHeight="24sp"
            android:textColor="@color/text_heading_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_btn"
            app:layout_constraintEnd_toStartOf="@+id/add_btn"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Election Form"
            />
        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDEAEA"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/constrainLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Please fill details for Election From"
                android:textColor="@color/text_heading_color"
                android:textSize="@dimen/text_size_18sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="6dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                android:elevation="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:paddingBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginRight="12dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Details :"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="8dp"
                        />
                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full Name"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="8dp"/>
                    <EditText
                        android:id="@+id/et_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile No."
                        android:textSize="16sp"
                        android:inputType="number"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="8dp"/>
                    <EditText
                        android:id="@+id/ed_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email-Id"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="8dp"/>
                    <EditText
                        android:id="@+id/et_DOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date of birth"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="8dp"/>

                    <Spinner
                        android:id="@+id/choose_group"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/spinner_title"
                        style="@style/Widget.AppCompat.Spinner.DropDown"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                            android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="#A6A3A3"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:backgroundTint="#F8F2F2"
                            >
                        <EditText
                            android:hint="Small Description about Yourself"
                            android:id="@+id/et_description"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:lines="7"
                            android:ems="10"
                          android:paddingLeft="8dp"
                            android:paddingTop="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="4dp"
                            android:gravity="start"
                            android:textSize="16sp"
                            android:inputType="textMultiLine"
                            android:background="@android:color/transparent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_bg"
                            android:backgroundTint="#F8F2F2"
                            >
                            <EditText
                                android:hint="Election Menifesto"
                                android:id="@+id/et_manifesto"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:lines="7"
                                android:ems="10"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="4dp"
                                android:gravity="start"
                                android:textSize="16sp"
                                android:inputType="textMultiLine"
                                android:background="@android:color/transparent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="start"
                        >
                        <CheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="@string/term_condition"
                            />

                    </LinearLayout>
                    <Button
                        android:id="@+id/btnsubmit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_60"
                        android:layout_marginLeft="@dimen/dp_60"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/space20"
                        android:layout_marginBottom="@dimen/space20"
                        style="@style/ButtonBlue"
                        android:text="Submit"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>





</androidx.coordinatorlayout.widget.CoordinatorLayout>