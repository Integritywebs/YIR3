<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_grey"
    android:orientation="vertical"
    tools:context=".activity.ScholershipFormActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:padding="@dimen/space10"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center|left"
            android:src="@drawable/left"/>

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:src="@mipmap/logo"/>

    </FrameLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/scholarshipbanner"
            android:layout_height="170dp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space10"
                android:layout_gravity="left|center"
                android:paddingLeft="@dimen/space10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/darkblack"
                    android:text="LOREM IPSUM Scholarship" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/darkblack"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit,sed do eiusmod tempor incidiunt ut labore et dolore magna aliqua" />


            </LinearLayout>
        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/space10"
            android:gravity="center"
            android:text="Please fill details to create account"
            android:textSize="@dimen/text_size_18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space10"
            android:layout_marginRight="@dimen/space10"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                android:elevation="4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Details :"
                        android:textSize="@dimen/text_size_18sp" />

                    <EditText
                        android:id="@+id/etname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40_dp"
                        android:layout_marginTop="@dimen/space10"
                        android:inputType="text"
                        android:hint="Full name" />

                    <EditText
                        android:id="@+id/etmobilenumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40_dp"
                        android:inputType="number"
                        android:layout_marginTop="@dimen/space10"
                        android:hint="Mobile No" />

                    <EditText
                        android:id="@+id/etemail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40_dp"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="@dimen/space10"
                        android:hint="Email-id" />

                    <EditText
                        android:id="@+id/etdateofbirht"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40_dp"
                        android:inputType="date"
                        android:layout_marginTop="@dimen/space10"
                        android:hint="Date of birth" />

                    <Spinner
                        android:id="@+id/spinnergender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40_dp"
                        android:layout_marginTop="@dimen/space10" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                android:elevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Residential Proofs :"
                        android:textSize="@dimen/text_size_18sp" />

                    <Spinner
                        android:id="@+id/spinnerid"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40_dp"
                        android:layout_marginTop="@dimen/space10"
                        />

                    <EditText
                        android:id="@+id/etvarificationid"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40_dp"
                        android:layout_marginTop="@dimen/space10"
                        android:hint="Enter Verification ID " />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:cardCornerRadius="6dp"
                app:cardUseCompatPadding="true"
                android:elevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Educational Details :"
                        android:textSize="@dimen/text_size_18sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/space10"
                        android:orientation="horizontal"
                        >



                        <TextView
                            android:id="@+id/add_photo"
                            android:layout_width="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="center"
                            android:drawablePadding="@dimen/space5"
                            android:drawableLeft="@drawable/cameras"
                            android:layout_height="wrap_content"
                            android:text="Add Photo"/>

                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space10"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="I hereby declare all the information has been submitted"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/login_text_color"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="T&amp;C"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/space20"
                android:layout_marginBottom="@dimen/space20"
                style="@style/ButtonBlue"
                android:text="Submit"/>
        </LinearLayout>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>