<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReferralCodeGeneratedActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:alpha="1"
            android:clickable="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_back"
            android:focusable="true"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/gradientTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referral Code"
            android:textSize="18sp"
            android:lineHeight="24sp"
            android:textColor="@color/text_heading_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_btn"
            app:layout_constraintEnd_toStartOf="@+id/add_btn"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Referral Code"
            />
        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#E6E8F3"
        android:paddingBottom="16dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constrainLayout2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_constraintTop_toTopOf="@+id/constrainLayout"
                android:background="@drawable/referral"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                >




            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Referral Code is generated"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="#2B2C33"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/constrainLayout2"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/edit_bg"
                android:text="YIRM2-1234"
                android:layout_marginTop="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="24dp"
                android:paddingTop="4dp"
                android:textSize="16sp"
                android:textColor="#277BBD"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Copy and Share"
                android:layout_marginTop="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="24dp"
                android:paddingTop="4dp"
                android:textSize="16sp"
                android:drawableLeft="@drawable/red_share_24"
                android:textColor="#87160D"
                android:paddingBottom="4dp"
                android:drawablePadding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>








        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>