<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logins.LoginActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_margin="@dimen/dp_30"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/space10"
            android:layout_marginTop="@dimen/space10"
            android:src="@mipmap/logo" />
        <TextView
            android:id="@+id/textd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Young Indian Revolution"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:textSize="@dimen/space20"
            />

        <TextView
            android:id="@+id/texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journals Private Limited"
            android:textColor="@color/pink" />

        <EditText
            android:id="@+id/etmobilenumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40_dp"
            android:layout_marginTop="@dimen/margin_40_dp"
            android:hint="Email/Mobile No."/>
        <EditText
            android:id="@+id/etpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40_dp"
            android:layout_marginTop="@dimen/margin_40_dp"
            android:inputType="textPassword"
            android:hint="Password"/>
        <Button
            android:id="@+id/get_otp"
            style="@style/ButtonBlue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40_dp"
            android:layout_marginTop="@dimen/space20"
            android:layout_marginLeft="@dimen/margin_80dp"
            android:layout_marginRight="@dimen/margin_80dp"
            android:text="Verify Now" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/ButtonBlue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40_dp"
            android:layout_marginTop="@dimen/space20"
            android:layout_marginLeft="@dimen/margin_80dp"
            android:layout_marginRight="@dimen/margin_80dp"
            android:text="Login Now" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textsign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User?"/>
            <TextView
                android:id="@+id/txSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/agree_and_join_color"
                android:text="  Create an account"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/space20"
            android:layout_height="wrap_content"
            android:text="Or via social media:"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/space10"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivfacebook"
                android:layout_width="@dimen/margin_40_dp"
                android:src="@drawable/facebook"
                android:layout_height="@dimen/margin_40_dp"/>
            <ImageView
                android:id="@+id/ivgoogle"
                android:layout_width="@dimen/margin_40_dp"
                android:src="@drawable/google"
                android:layout_height="@dimen/margin_40_dp"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>