<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:weightSum="2"
    android:gravity="center|start"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/comments_image"
        android:layout_weight="0.01"
        android:src="@drawable/profile"

        />
    <LinearLayout
        android:layout_weight="1.99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"

        >
        <TextView
            android:id="@+id/comments_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Vedita"
            android:textColor="#000"
            android:textSize="@dimen/text_size_16sp"/>
        <TextView
            android:id="@+id/comments_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="10 min ago"
            android:textColor="#000"
            android:textSize="@dimen/text_size_14sp"/>



    </LinearLayout>

        <TextView
            android:id="@+id/comments"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14sp"
            android:text="Lorem ipsum dolor sit amet,consectetur adipiscing slit,sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"/>

</LinearLayout>




</LinearLayout>